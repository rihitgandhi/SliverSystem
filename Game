let dogPosition;
const resultElement = document.getElementById('result');
const boxes = document.querySelectorAll('.box');

function startGame() {
    dogPosition = Math.floor(Math.random() * boxes.length);
    resultElement.textContent = '';
    boxes.forEach(box => {
        box.textContent = '?';
        box.classList.add('hidden');
        box.style.pointerEvents = 'auto';
    });
}

function makeGuess(index) {
    if (index === dogPosition) {
        boxes[index].textContent = 'üê∂';
        resultElement.textContent = 'You found the dog!';
    } else {
        boxes[index].textContent = '‚ùå';
        resultElement.textContent = 'Try again!';
    }
    boxes[index].classList.remove('hidden');
    boxes[index].style.pointerEvents = 'none';
}

function restartGame() {
    startGame();
}

document.addEventListener('DOMContentLoaded', startGame);
